/* pages/index/index.wxss */


/* 轮播图样式 */

.banners {
    width: 100%;
    height: 300rpx;
}

.bannerlist image {
    width: 100%;
    height: 300rpx;
}


/* 五个导航样式 */

.navtagior {
    display: flex;
}

.nav {
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    width: 20%
}

.nav .iconfont {
    width: 100rpx;
    height: 100rpx;
    background: rgb(240, 19, 19);
    line-height: 100rpx;
    font-size: 50rpx;
    border-radius: 50%;
    color: #fff;
    text-align: center;
    margin: 20rpx 0;
}

.nav .navFont {
    font-size: 24rpx;
}


/* 推荐歌曲 */


/* 推荐歌曲头部部分 */

.remmondContener {
    padding: 20rpx;
}

.remmondContener .header {
    display: flex;
    flex-direction: column;
    font-size: 32rpx;
    margin: 10rpx 0;
}

.header .title {
    color: #666;
    margin-bottom: 10rpx;
}

.header .more {
    float: right;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    border: 1px solid #333;
    border-radius: 40rpx;
    font-size: 24rpx
}


/* 内容区 */

.recommendScroll {
    display: flex;
}

.scrollItem {
    display: flex;
    flex-direction: column;
    margin-right: 10rpx;
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
}

.scrollItem text {
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 26rpx;
}