/* pages/index/index.wxss */

.indexContent {
    height: 100%;
}

/* 轮播图样式 */

.banners {
    width: 100%;
    height: 300rpx;
}

.bannerlist image {
    width: 100%;
    height: 300rpx;
}

/* 五个导航样式 */

.navtagior {
    display: flex;
}

.nav {
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    width: 20%
}

.nav .iconfont {
    width: 100rpx;
    height: 100rpx;
    background: rgb(240, 19, 19);
    line-height: 100rpx;
    font-size: 50rpx;
    border-radius: 50%;
    color: #fff;
    text-align: center;
    margin: 20rpx 0;
}

.nav .navFont {
    font-size: 24rpx;
}

/* 推荐歌曲 */

/* 推荐歌曲头部部分 */

.remmondContener {
    padding: 20rpx;
    height: 400rpx;
}

/* 内容区 */

.recommendScroll {
    display: flex;
    height: 300rpx;
}

.scrollItem {
    display: flex;
    flex-direction: column;
    margin-right: 10rpx;
    height: 300rpx;
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
}

.scrollItem text {
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 26rpx;
}

/* 排行榜 */

.topList {
    padding: 20rpx;
}

/*  */

.topContent {
    width: 96%;
    background-color: #fbfbfb;
}

/* 音乐区排行榜区域 */

/* 内容区域 */

.topListcontent {
    /* display: flex; */
    height: 400rpx;
}

.topContent .content {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.contentName {
    color: #000;
    margin-bottom: 10rpx;
    /* line-height: 10rpx; */
}

.musicList {
    /* width: 200rpx;
    height: 300rpx; */
    display: flex;
    flex-direction: row;
    margin-bottom: 20rpx;
}

.musicList image {
    width: 100rpx;
    height: 100rpx;
}

.musicList .count {
    width: 150rpx;
    height: 100rpx;
    margin-left: 20rpx;
    text-align: left;
    line-height: 100rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 32rpx;
    display: block;
}

.musicList .musicName {
    height: 100prx;
    line-height: 100rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}