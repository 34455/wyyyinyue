.history .historyList{
    padding:0 10rpx;
    box-sizing: border-box;
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    background-color: #ededed;
    border-radius: 30rpx;
    margin-left: 10rpx;
    margin-bottom: 10rpx;
}
.history .delete{
    position: absolute;
    bottom: 0;
    right: 0;
}
.hotList {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
}

.hotList text {
    font-size: 24rpx;
}

.imageIcon {
    width: 24rpx;
    height: 24rpx;
    margin-left: 10rpx;
}