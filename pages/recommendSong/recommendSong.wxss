/* pages/recommendSong/recommendSong.wxss */

.recommendContainer {
    height: 100%;
    /* position: relative; */
}

/* 头部 */

.header {
    width: 100%;
    height: 300rpx;
    position: relative;
}

.header image {
    width: 100%;
    height: 300rpx;
}

.headerTime {
    width: 82%;
    height: 100rpx;
    line-height: 32rpx;
    font-size: 32rpx;
    text-align: center;
    position: absolute;
    margin: auto;
    top: 12%;
    left: 4%;
    right: 0;
    bottom: 0;
}

/* 内容区 */

.content {
    background-color: #fff;
    border-radius: 30rpx;
    padding: 0 20rpx;
    position: relative;
    top: -20rpx;
}

.content .contentHeader {
    display: flex;
    justify-content: space-between;
}

.contentHeader text {
    height: 80rpx;
    line-height: 80rpx;
}

/* 内容区列表 */

.contentList {
    width: 100%;
    height: calc(100vh - 380rpx);
}

.musicList {
    display: flex;
    /* padding: 0 20rpx; */
    box-sizing: border-box;
    position: relative;
    margin-bottom: 20rpx;
}

.musicList image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}

.musicContent {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.musicContent text {
    font-size: 26rpx;
    margin-left: 10rpx
}

.icon-gengduo {
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    /* background-color: red; */
    text-align: center;
    position: absolute;
    right: 0rpx;
}