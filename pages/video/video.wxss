/* pages/video/video.wxss */

.viewContentior {
  height: 100%;
}

/* 头部 */
.viewHeader {
  padding: 10rpx;
  display: flex;
}

.viewHeader image {
  width: 60rpx;
  height: 60rpx;
}

.viewHeader .search {
  flex: 1;
  border: 1px solid #eee;
  text-align: center;
  font-size: 28rpx;
  line-height: 56rpx;
  color: #d43c33;
  margin: 0 20rpx;
}

/* 导航列表 */
.navList {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}

.navList .navItem {
  /* margin: 0 10rpx; */
  height: 60rpx;
  padding: 0 20rpx;
}

.nav {
  height: 60rpx;
  padding: 20rpx 0;
  line-height: 28rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.active {
  border-bottom: 1px solid #d43c33;
}

/* 视频列表 */

.videoList {
  margin-top: 20rpx;
  height: calc(100vh - 160rpx);
   /* height: calc(100vh - 100rpx);页面触底测试  */
}

.videoItem {
  width: 100%;
  padding: 0 3%;
  box-sizing: border-box;
  /* height: 360rpx; */
}

.videoItem .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

.videoItem .content {
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
  box-sizing: border-box;
  /* margin-bottom: 20rpx; */
}

.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 60rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: 10rpx;
  font-size: 20rpx;
  display: inline-block;
  margin-right: 30rpx;
}